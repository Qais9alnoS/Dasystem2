{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DAS Management",
  "version": "0.0.0",
  "identifier": "com.dasmgmt.management",
  "build": {
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run watch",
    "beforeBuildCommand": "npm run build:prod"
  },
  "app": {
    "windows": [
      {
        "title": "DAS Management",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost http://localhost:3000; img-src 'self' asset: http://asset.localhost data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' http://localhost:3000 http://localhost:8000 http://ipc.localhost ws://localhost:3000;"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}